{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HooksQuery",
  "type": "object",
  "properties": {
    "method": {
      "type": "string",
      "default": "HooksQuery"
    },
    "filter": {
      "type": "object",
      "properties": {
        "writer": {
          "type": "string",
          "description": "DID string from which hooks were written"
        },
        "recordId": {
          "type": "string",
          "description": "deterministic ID for the logical Hook record"
        },
        "active": {
          "type": "boolean",
          "description": "indicates that only active hooks should be returned"
        }
      }
    }
  },
  "required": ["method"]
}
